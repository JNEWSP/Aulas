<body>
    <div class="container">
        <h1>Validação Numérica</h1>
        
        <form id="numberForm">
            <div class="form-group">
                <label for="numberA">Campo A:</label>
                <input type="number" id="numberA" placeholder="Digite o número A" required>
            </div>
            
            <div class="form-group">
                <label for="numberB">Campo B:</label>
                <input type="number" id="numberB" placeholder="Digite o número B" required>
            </div>
            
            <button type="submit">Validar</button>
        </form>
        
        <div id="message" class="message"></div>
        
        <div class="instructions">
            <h3>Instruções:</h3>
            <ul>
                <li>Digite um número no Campo A</li>
                <li>Digite um número no Campo B</li>
                <li>Clique no botão "Validar"</li>
                <li>O formulário será válido se o número B for maior que o número A</li>
            </ul>
        </div>
    </div>

    <script>
        document.getElementById('numberForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const numberA = parseFloat(document.getElementById('numberA').value);
            const numberB = parseFloat(document.getElementById('numberB').value);
            const messageElement = document.getElementById('message');
            
            // Validação se os campos estão preenchidos
            if (isNaN(numberA) || isNaN(numberB)) {
                messageElement.textContent = 'Por favor, preencha ambos os campos com números válidos.';
                messageElement.className = 'message error';
                return;
            }
            
            // Validação principal: B deve ser maior que A
            if (numberB > numberA) {
                messageElement.textContent = `Formulário válido! ${numberB} é maior que ${numberA}.`;
                messageElement.className = 'message success';
            } else {
                messageElement.textContent = `Formulário inválido! ${numberB} não é maior que ${numberA}.`;
                messageElement.className = 'message error';
            }
        });
    </script>
